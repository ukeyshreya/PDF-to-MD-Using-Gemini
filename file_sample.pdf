import PyPDF2
import os

def extract_text_from_pdf(sample.pdf1):
    with open(sample.pdf1, 'rb') as file:
        reader = PyPDF2.PdfReader(file)
        text = ''
        for page in reader.pages:
            text += page.extract_text() + '\n'
    return text

